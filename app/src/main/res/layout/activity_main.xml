<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cargo.booking_details.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Booking Details"
        android:layout_centerHorizontal="true"
        android:id="@+id/informationTextView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editTextName"
        android:layout_below="@+id/informationTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="58dp"
        android:hint="Name"
        android:textStyle="bold" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextEmail"
        android:layout_alignLeft="@+id/editTextName"
        android:layout_alignStart="@+id/editTextName"
        android:layout_alignRight="@+id/editTextName"
        android:layout_alignEnd="@+id/editTextName"
        android:hint="Email"
        android:layout_below="@+id/editTextName"
        android:textStyle="bold" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/editTextContact"
        android:layout_centerHorizontal="true"
        android:hint="Contact"
        android:layout_below="@+id/editTextEmail"
        android:textStyle="bold" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/btnReg"
        android:layout_below="@+id/editTextContact"
        android:layout_alignLeft="@+id/editTextContact"
        android:layout_alignStart="@+id/editTextContact"
        android:layout_marginTop="52dp"
        android:layout_alignRight="@+id/editTextContact"
        android:layout_alignEnd="@+id/editTextContact"
        android:background="#57a890"
        android:textColor="#ffff" />

</RelativeLayout>
